<h1>Login</h1>

<form>
  <fieldset>
    <legend>Credentials</legend>

    <p class="error" id="error"></p>

    <label>
      Email: <input name="email" type="email">
    </label>

    <label>
      Password: <input name="password" type="password">
    </label>

    <input type="submit" value="Login">
  </fieldset>
</form>

<ul>
